<web-app 
xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
 
    <context-param>
        <param-name>dbuser</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>dbpw</param-name>
        <param-value>Tommy6565,.</param-value>
    </context-param>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:sqlserver://localhost;databaseName=TestDB</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>homePage</servlet-name>
        <servlet-class>bookstore.homePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginPage</servlet-name>
        <servlet-class> bookstore.loginPage</servlet-class>
        
    </servlet>
    <servlet>
        <servlet-name>registrationPage</servlet-name>
        <servlet-class>bookstore.registrationPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>purchasePage</servlet-name>
        <servlet-class>bookstore.Customer.purchasePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>billPage</servlet-name>
        <servlet-class>bookstore.Customer.billPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>refundRequestPage</servlet-name>
        <servlet-class>bookstore.Customer.refundRequestPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>refundReceiptPage</servlet-name>
        <servlet-class>bookstore.Customer.refundReceiptPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>refundRequestAuthorizationPage</servlet-name>
        <servlet-class>bookstore.Manager.refundRequestAuthorizationPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookManagementPage</servlet-name>
        <servlet-class>bookstore.Manager.bookManagementPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookDetailsPage</servlet-name>
        <servlet-class>bookstore.Manager.bookDetailsPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>browseBookPage</servlet-name>
        <servlet-class>bookstore.browseBookPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutPage</servlet-name>
        <servlet-class>bookstore.logoutPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginSuccessPage</servlet-name>
        <servlet-class>bookstore.loginSuccessPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrationPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>browseBookPage</servlet-name>
        <url-pattern>/browse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>purchasePage</servlet-name>
        <url-pattern>/purchase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>billPage</servlet-name>
        <url-pattern>/bill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>refundRequestPage</servlet-name>
        <url-pattern>/refund</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>refundReceiptPage</servlet-name>
        <url-pattern>/refundReceipt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>refundRequestAuthorizationPage</servlet-name>
        <url-pattern>/refundAuth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookManagementPage</servlet-name>
        <url-pattern>/bookManagement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookDetailsPage</servlet-name>
        <url-pattern>/bookDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutPage</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginSuccessPage</servlet-name>
        <url-pattern>/loginSuccess</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
