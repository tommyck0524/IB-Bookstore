<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
   
    <servlet>
        <servlet-name>homePage</servlet-name>
        <servlet-class>bookstore.homePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginPage</servlet-name>
        <servlet-class> bookstore.loginPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrationPage</servlet-name>
        <servlet-class>bookstore.registrationPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>purchasePage</servlet-name>
        <servlet-class>bookstore.Customer.purchasePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>billPage</servlet-name>
        <servlet-class>bookstore.Customer.billPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>refundRequestPage</servlet-name>
        <servlet-class>bookstore.Customer.refundRequestPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>refundReceiptPage</servlet-name>
        <servlet-class>bookstore.Customer.refundReceiptPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>refundRequestAuthorizationPage</servlet-name>
        <servlet-class>bookstore.Manager.refundRequestAuthorizationPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookManagementPage</servlet-name>
        <servlet-class>bookstore.Manager.bookManagementPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookDetailsPage</servlet-name>
        <servlet-class>bookstore.Manager.bookDetailsPage</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>browseBookPage</servlet-name>
        <servlet-class>bookstore.browseBookPage</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>loginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>registrationPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>browseBookPage</servlet-name>
        <url-pattern>/browse</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>purchasePage</servlet-name>
        <url-pattern>/customer/purchase</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>billPage</servlet-name>
        <url-pattern>/customer/bill</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>refundRequestPage</servlet-name>
        <url-pattern>/customer/refundRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>refundReceiptPage</servlet-name>
        <url-pattern>/customer/refundReceipt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>refundRequestAuthorizationPage</servlet-name>
        <url-pattern>/manager/refundAuth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookManagementPage</servlet-name>
        <url-pattern>/manager/bookManagement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookDetailsPage</servlet-name>
        <url-pattern>/manager/bookDetails</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
